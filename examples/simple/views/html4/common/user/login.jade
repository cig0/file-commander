extends ../layouts/layout.jade

mixin linkProvider(href, name)
  a(href=href)&attributes(attributes) Sing in with #{name}

block content
  ul
    if (appkey.auth.hasOwnProperty('local'))
      li
        form(action="/login", method="post")
          div
            label Username:
            input(type="text", name=appkey.auth.local.fields.username)
          div
            label Password:
            input(type="password", name=appkey.auth.local.fields.password)
          div
            input(type="submit", value="Sing in")
    if (appkey.auth.hasOwnProperty('links') && Array.isArray(appkey.auth.links))
      each link in appkey.auth.links
        li
          +linkProvider(link.href, name)(link.attributes)
