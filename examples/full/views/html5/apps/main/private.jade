extends ../../common/layouts/layout.jade

append styles
  link(rel="stylesheet" type="text/css" href="/styles/main.css")

append scripts
  script(type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.4/angular.js")
  script(type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.4/angular-route.js")
  script(type="text/javascript" src="/scripts/third-party/ui-bootstrap-0.12.0.my_local.js")
  script(type="text/javascript" src="/scripts/utils.js")
  script(type="text/javascript" src="/scripts/angular/read-write/app.js")
  script(type="text/javascript" src="/scripts/angular/controller.js")
  script(type="text/javascript" src="/scripts/angular/filters.js")

block nav
  include ../../common/mixins/base.jade
  nav
    .fcmder_app-pages
      +navLinks('/', CONSTS.COMMANDER.PUBLIC_APP_URL_MOUNT)
    .fcmder_user-cmds
      +userCmds(CONSTS.COMMANDER.HOME_ROUTE, 'Home', CONSTS.COMMANDER.LOGOUT_ROUTE, 'Log out')

block content
  div(ng-view)
    .container
      p JavaScript support not detected. Please use 
        a(href=CONSTS.COMMANDER.PRIVATE_APP_URL_MOUNT + CONSTS.COMMANDER.PLAIN_APP_URL_MOUNT + appkey.app.path) plain application
        |  instead.
