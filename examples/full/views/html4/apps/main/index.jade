extends ../../common/layouts/layout.jade

append styles
  link(rel="stylesheet" type="text/css" href="/styles/main.css")

block nav
  include ../../common/mixins/base.jade
  .navigation
    .fcmder_app-pages
      +navPublic('/')
    .fcmder_user-cmds
      if (!appkey.user)
        +userCmds(CONSTS.COMMANDER.LOGIN_ROUTE, 'Log in')
      else
        +userCmds(CONSTS.COMMANDER.PRIVATE_APP_URL_MOUNT, 'My files', CONSTS.COMMANDER.HOME_ROUTE, 'Home', CONSTS.COMMANDER.LOGOUT_ROUTE, 'Log out')

block content
  .container
    p JavaScript application has not been implemented yet for HTML4. Please use 
      a(href=CONSTS.COMMANDER.PUBLIC_APP_URL_MOUNT + CONSTS.COMMANDER.PLAIN_APP_URL_MOUNT + appkey.app.path) plain application
      |  instead.
